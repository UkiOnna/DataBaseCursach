<Page x:Class="AuctionInterface.DataPages.ItemPages.ItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuctionInterface.DataPages.ItemPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemPage">

    <Grid>
        <DataGrid Name="table" HorizontalAlignment="Left" Height="335" Margin="21,10,0,0" VerticalAlignment="Top" Width="758"/>
        <Button Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="469,371,0,0" VerticalAlignment="Top" Width="75" Click="ShowAddPage"/>
        <Button Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="704,371,0,0" VerticalAlignment="Top" Width="75" Click="DeleteItem"/>
        <Button Name="editButton" Content="Edit" HorizontalAlignment="Left" Margin="585,371,0,0" VerticalAlignment="Top" Width="75" Click="ShowEditPage"/>
        <Button Name="backButton" Content="Back" HorizontalAlignment="Left" Margin="21,371,0,0" VerticalAlignment="Top" Width="75" Click="BackToMainMenu"/>
    </Grid>
</Page>
